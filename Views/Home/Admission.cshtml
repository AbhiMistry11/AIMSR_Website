<div class="container mt-5 mb-5">
    <!-- Banner/Header with enhanced design -->
    <div class="admission-banner mb-5">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="display-4">Admissions</h1>
                <p class="lead">Join AIMSR College and build your future with excellence</p>
                <a href="#apply-now" class="btn btn-light mt-3">Apply Now</a>
            </div>
        </div>
    </div>

    <!-- Admission Process Section - Improved card layout -->
    <div class="row mb-5">
        <div class="col-md-12">
            <h2>Admission Process</h2>
            <div class="card-deck">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><span class="step-number">01</span> Application</h5>
                        <p class="card-text">Complete and submit the online application form with required documents.</p>
                        <a href="#" class="btn btn-sm btn-outline-primary mt-2">Start Application</a>
                    </div>
                </div>
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><span class="step-number">02</span> Entrance Test</h5>
                        <p class="card-text">Qualify the entrance examination conducted by the college.</p>
                        <a href="#" class="btn btn-sm btn-outline-primary mt-2">Test Schedule</a>
                    </div>
                </div>
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><span class="step-number">03</span> Interview</h5>
                        <p class="card-text">Shortlisted candidates will be called for personal interview.</p>
                        <a href="#" class="btn btn-sm btn-outline-primary mt-2">Interview Tips</a>
                    </div>
                </div>
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><span class="step-number">04</span> Admission</h5>
                        <p class="card-text">Selected candidates will receive admission letter with fee details.</p>
                        <a href="#" class="btn btn-sm btn-outline-primary mt-2">Fee Payment</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Programs/Courses Section - Better accordion -->
    <div class="row mb-5">
        <div class="col-md-12">
            <h2>Programs Offered</h2>
            <div class="accordion" id="programsAccordion">
                <div class="card">
                    <div class="card-header" id="undergraduateHeading">
                        <h2 class="mb-0">
                            <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse"
                                    data-target="#undergraduateCollapse" aria-expanded="true" aria-controls="undergraduateCollapse">
                                <i class="fas fa-graduation-cap mr-2"></i> Undergraduate Programs
                            </button>
                        </h2>
                    </div>
                    <div id="undergraduateCollapse" class="collapse show" aria-labelledby="undergraduateHeading" data-parent="#programsAccordion">
                        <div class="card-body">
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Bachelor of Business Administration (BBA)
                                    <a href="#" class="btn btn-sm btn-outline-secondary">Details</a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Bachelor of Computer Applications (BCA)
                                    <a href="#" class="btn btn-sm btn-outline-secondary">Details</a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Bachelor of Science in Information Technology (B.Sc IT)
                                    <a href="#" class="btn btn-sm btn-outline-secondary">Details</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" id="postgraduateHeading">
                        <h2 class="mb-0">
                            <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse"
                                    data-target="#postgraduateCollapse" aria-expanded="false" aria-controls="postgraduateCollapse">
                                <i class="fas fa-user-graduate mr-2"></i> Postgraduate Programs
                            </button>
                        </h2>
                    </div>
                    <div id="postgraduateCollapse" class="collapse" aria-labelledby="postgraduateHeading" data-parent="#programsAccordion">
                        <div class="card-body">
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Master of Business Administration (MBA)
                                    <a href="#" class="btn btn-sm btn-outline-secondary">Details</a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Master of Computer Applications (MCA)
                                    <a href="#" class="btn btn-sm btn-outline-secondary">Details</a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Master of Science in Data Science (M.Sc Data Science)
                                    <a href="#" class="btn btn-sm btn-outline-secondary">Details</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Fee Structure - Enhanced table -->
