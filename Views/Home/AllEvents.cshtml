@{
    ViewData["Title"] = "All Events";
}

<div class="bg-primary text-white py-5 mb-5">
    <div class="container">
        <h1 class="display-4">Upcoming Events</h1>
        <p class="lead">Stay updated with all the events happening at AIMSR</p>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="card-title">Cultural Fest 2025</h3>
                        <span class="badge bg-primary">April 5-7, 2025</span>
                    </div>
                    <p class="card-text">A three-day extravaganza showcasing the diverse cultural talents of our students. Join us for music, dance, drama, and more.</p>
                    <a href="#" class="btn btn-outline-primary">Learn More</a>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="card-title">Workshop on AI & ML</h3>
                        <span class="badge bg-primary">March 27, 2025</span>
                    </div>
                    <p class="card-text">A hands-on workshop on Artificial Intelligence and Machine Learning conducted by industry experts. Open to all AIMSR students.</p>
                    <a href="#" class="btn btn-outline-primary">Register</a>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="card-title">Campus Recruitment Drive</h3>
                        <span class="badge bg-primary">April 15, 2025</span>
                    </div>
                    <p class="card-text">Top companies will be visiting our campus for recruitment. Final year students are encouraged to participate.</p>
                    <a href="#" class="btn btn-outline-primary">Learn More</a>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="card-title">Alumni Meet 2025</h3>
                        <span class="badge bg-primary">May 10, 2025</span>
                    </div>
                    <p class="card-text">An opportunity for alumni to reconnect with their alma mater and network with fellow graduates.</p>
                    <a href="#" class="btn btn-outline-primary">Register</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title h5 mb-0">Calendar</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>Next Event:</strong> Workshop on AI & ML (March 27, 2025)
                    </div>
                    <a href="#" class="btn btn-primary btn-sm w-100 mb-3">Subscribe to Event Updates</a>
                    <a href="#" class="btn btn-outline-primary btn-sm w-100">Download Calendar</a>
                </div>
            </div>
        </div>
    </div>
</div>