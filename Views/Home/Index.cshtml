@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section">
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/5dc4f16d13a52_1.jpg" class="d-block w-100" alt="Campus Image 1">
                <div class="carousel-caption">
                    <h1>Welcome to AIMSR College</h1>
                    <p>Shaping the leaders of tomorrow</p>
                    <a asp-controller="Home" asp-action="Admission" class="btn btn-primary btn-lg">Apply Now</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/high-angle-adults-studying-together_23-2150331646.webp" class="d-block w-100" alt="Campus Image 2">
                <div class="carousel-caption">
                    <h1>Excellence in Education</h1>
                    <p>Providing quality education since 1995</p>
                    <a asp-controller="Home" asp-action="About" class="btn btn-primary btn-lg">Learn More</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/university-students-walking-outside-on-campus.webp" class="d-block w-100" alt="Campus Image 3">
                <div class="carousel-caption">
                    <h1>Join Our Community</h1>
                    <p>Discover opportunities for growth and success</p>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-primary btn-lg">Contact Us</a>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>

<!-- Welcome Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h2 class="display-4 mb-3">Welcome to AIMSR College</h2>
                <p class="lead">At AIMSR, we are committed to providing a transformative educational experience that prepares students for successful careers and meaningful lives.</p>
                <p>Founded in 1995, AIMSR has established itself as a leading institution for higher education, offering a wide range of undergraduate and postgraduate programs across various disciplines.</p>
                <a asp-controller="Home" asp-action="About" class="btn btn-outline-primary mt-3">Learn More About Us</a>
            </div>
            <div class="col-lg-6">
                <img src="~/university-students-walking-outside-on-campus.webp" alt="AIMSR Building" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</section>

<!-- Programs Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Our Programs</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/ug.webp" class="card-img-top" alt="Undergraduate Programs">
                    <div class="card-body">
                        <h5 class="card-title">Undergraduate Programs</h5>
                        <p class="card-text">Explore our comprehensive undergraduate programs designed to provide a strong foundation for your career.</p>
                        <a asp-controller="Home" asp-action="ExploreUndergraduate" class="btn btn-sm btn-primary">Explore Programs</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/pg.webp" class="card-img-top" alt="Postgraduate Programs">
                    <div class="card-body">
                        <h5 class="card-title">Postgraduate Programs</h5>
                        <p class="card-text">Advance your knowledge and skills with our specialized postgraduate programs.</p>
                        <a asp-controller="Home" asp-action="ExplorePostgraduate" class="btn btn-sm btn-primary">Explore Programs</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/ro.webp" class="card-img-top" alt="Research Opportunities">
                    <div class="card-body">
                        <h5 class="card-title">Research Opportunities</h5>
                        <p class="card-text">Engage in cutting-edge research that addresses real-world challenges and creates impact.</p>
                        <a asp-controller="Home" asp-action="ExploreResearch" class="btn btn-sm btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4 mb-md-0">
                <div class="display-4 fw-bold">5000+</div>
                <p>Students</p>
            </div>
            <div class="col-md-3 mb-4 mb-md-0">
                <div class="display-4 fw-bold">200+</div>
                <p>Faculty Members</p>
            </div>
            <div class="col-md-3 mb-4 mb-md-0">
                <div class="display-4 fw-bold">50+</div>
                <p>Programs</p>
            </div>
            <div class="col-md-3">
                <div class="display-4 fw-bold">95%</div>
                <p>Placement Rate</p>
            </div>
        </div>
    </div>
</section>

<!-- News & Events Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">News & Events</h2>
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Annual Technology Symposium 2025</h5>
                        <p class="card-text text-muted mb-2">March 15, 2025</p>
                        <p class="card-text">Join us for our annual technology symposium featuring keynote speakers from leading tech companies, workshops, and networking opportunities.</p>
                        <a asp-controller="Home" asp-action="NewsDetail" asp-route-id="1" class="btn btn-outline-primary">Read More</a>
                    </div>
                </div>
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">AIMSR Ranks #1 in Engineering Education</h5>
                        <p class="card-text text-muted mb-2">February 28, 2025</p>
                        <p class="card-text">We're proud to announce that AIMSR has been ranked #1 in engineering education by the National Education Survey for the third consecutive year.</p>
                        <a asp-controller="Home" asp-action="NewsDetail" asp-route-id="2" class="btn btn-outline-primary">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Upcoming Events</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0">Cultural Fest 2025</h6>
                                <small class="text-muted">April 5-7, 2025</small>
                            </div>
                            <span class="badge bg-primary rounded-pill">3 days</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0">Workshop on AI & ML</h6>
                                <small class="text-muted">March 27, 2025</small>
                            </div>
                            <span class="badge bg-primary rounded-pill">1 day</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0">Campus Recruitment Drive</h6>
                                <small class="text-muted">April 15, 2025</small>
                            </div>
                            <span class="badge bg-primary rounded-pill">1 day</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0">Alumni Meet 2025</h6>
                                <small class="text-muted">May 10, 2025</small>
                            </div>
                            <span class="badge bg-primary rounded-pill">1 day</span>
                        </li>
                    </ul>
                    <div class="card-footer">
                        <a asp-controller="Home" asp-action="AllEvents" class="btn btn-primary btn-sm w-100">View All Events</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Custom JavaScript for homepage if needed
    </script>
}